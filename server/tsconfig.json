{
  "compilerOptions": {
    "target": "es2016",             //                    
    "module": "commonjs",              //                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": false,    
    "sourceMap": true,
    "rootDirs": ["./server"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@npms/erp-10x/src/customTypes"],
    "resolveJsonModule": true,
    "esModuleInterop": true                                 
  }
}
